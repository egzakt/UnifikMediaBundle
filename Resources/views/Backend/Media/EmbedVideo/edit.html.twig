{% extends 'EgzaktMediaBundle:Backend:layout.html.twig' %}
{% form_theme form 'EgzaktSystemBundle:Backend/Core:edit_fields.html.twig' %}

{% block content_hemediaer %}
    <h1>{{ media.i18nTitle|trans|raw }}</h1>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
    '@EgzaktMediaBundle/Resources/public/backend/css/*'
    %}
    <link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block content_main %}

    <form novalidate="novalidate" action="{{ path(media.route, media.routeParams) }}" method="post" {{ form_enctype(form) }}>

        {% block edit_actions %}
            {% include 'EgzaktMediaBundle:Backend/Media/Core:edit_actions.html.twig' with {
            'entity': media,
            'delete_route': path(media.route('delete'), media.routeParams()),
            'delete_route_rel': path(media.route('delete'), media.routeParams({'message': true})),
            'cancel_route': path(media.route('list')),
            } %}
        {% endblock %}

        <div id="fields_box">
            <table class="fields" cellspacing="0">

                {{ form_errors(form) }}

                {{ form_row(form.name) }}

                {{ form_row(form.url) }}

                {#{% include 'EgzaktMediaBundle:Backend/Media:edit_image_aviary.html.twig' with {#}
                {#'media': media,#}
                {#} %}#}

                <tr>
                    <th></th>
                    <td>
                        <iframe src="{{ media.mediaPath }}" width="640" height="390" frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>
                    </td>
                </tr>

                {% include 'EgzaktSystemBundle:Backend/Core:collapsable_fields.html.twig' with {
                'link_name': 'Parameters',
                'fields': [form_row(form.description), form_row(form.caption)]
                } %}

                <tr style="display: none">
                    <th></th>
                    <td>
                        {{ form_widget(form.media) }}
                    </td>
                </tr>

                {{ form_rest(form) }}

                {% if media.id %}
                    <tr>
                        <th>
                            {% trans %}Last update {% endtrans %} :
                        </th>
                        <td style="vertical-align:bottom">
                            {{ media.updatedAt|date }}
                        </td>
                    </tr>
                    <tr>
                        <th>
                            {% trans %}Uploaded on {% endtrans %} :
                        </th>
                        <td style="vertical-align:bottom">
                            {{ media.createdAt|date }}
                        </td>
                    </tr>
                    {% if associatedContents|length > 0 %}
                        <tr>
                            <th>
                                {% trans %}Associated contents{% endtrans %} :
                            </th>
                            <td id="association_list">
                                <ul>
                                    {% for entityName,methodGroup in associatedContents %}
                                        {% for methodName,entities in methodGroup %}
                                            <li>
                                                {{ entities|length }} {{ entityName }} {% trans %}with this file include in{% endtrans %} {{ methodName }} {% trans %}field{% endtrans %}.
                                                <ul>
                                                    {% for entity in entities %}
                                                        - {{ entity }}
                                                    {% endfor %}
                                                </ul>
                                            </li>
                                        {% endfor %}
                                    {% endfor %}
                                </ul>
                            </td>
                        </tr>
                    {% endif %}
                {% endif %}
            </table>
        </div>

        {{ block('edit_actions') }}

    </form>

    {% javascripts
    '@EgzaktMediaBundle/Resources/public/backend/js/*'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

{% endblock content_main %}
