<div class="list_box">
    <table cellspacing="0" class="table-autosort">
        <thead>
        <tr>
            <th class="name table-sortable:ignorecase">{% trans %}Name{% endtrans %}</th>
            <th class="table-sortable:date">{% trans %}Last updated{% endtrans %}</th>
            <th>{% trans %}Thumbnail{% endtrans %}</th>
            <th class="edit"></th>
            <th class="delete"></th>

        </tr>
        <tr class="filters">
            <th class="name">
                <input onkeyup="Table.filter(this,this)" class="filter" alt="{{ "Search a name"|trans }}" />
            </th>
            <th>&nbsp</th>
            <th>&nbsp;</th>
            <th>&nbsp;</th>
            <th>&nbsp;</th>
        </tr>
        </thead>
        <tbody>
        {% for media in videos %}
            <tr id="item_{{ media.id }}">
                <td class="name">
                    <a href="{{ path(media.route, media.routeParams) }}">{{ media|raw }}</a>
                </td>
                <td>{{ media.updatedat|date('Y-m-d') }}</td>
                <td>
                    <a class="fancy-video" href="{{ asset(media.mediaPath) }}">
                        <img src="{{ asset('bundles/egzaktmedia/backend/images/video-icon.png') }}" />
                    </a>

                </td>
                <td class="edit">
                    {% if media.isEditable %}
                        <a href="{{ path(media.route, media.routeParams) }}" title="{% trans %}Edit{% endtrans %}">
                            <img src="{{ asset('bundles/egzaktsystem/backend/images/buttons/edit.png') }}" width="15" height="15" alt="" />
                        </a>
                    {% endif %}
                </td>
                <td class="delete">
                    <a href="{{ path(media.route('delete'), media.routeParams) }}" rel="{{ path(media.route('delete'), media.routeParams({'message': true})) }}" title="{% trans %}Delete{% endtrans %}">
                        <img src="{{ asset('bundles/egzaktsystem/backend/images/buttons/delete.png') }}" width="12" height="15" alt="" />
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="total">
        <span class="sub-total"></span>
        {% set count = videos|length %}
        {% transchoice count %}{0} No results|{1} One result|]1,Inf] %count% results{% endtranschoice %}
    </div>
</div>