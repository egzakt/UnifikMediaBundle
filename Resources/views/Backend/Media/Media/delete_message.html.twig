{% if entity.isDeletable %}
    {% trans %}Are you sure you want to delete{% endtrans %} "{% include 'EgzaktSystemBundle:Backend/Core:entity_title.html.twig' with { 'entity': entity } %}"?.
    {% if dependencyCount > 0 %}
        {% trans %}If you delete this entity{% endtrans %}{{ dependencyCount }}
    {% endif %}
{% else %}
    "{% include 'EgzaktSystemBundle:Backend/Core:entity_title.html.twig' with { 'entity': entity } %}" {% trans %}cannot be deleted because of these restrictions:{% endtrans %}
    <ul>
        {% for restriction in entity.deleteRestrictions %}
            {% set result = attribute(entity, restriction) %}

            {% if result is sameas(true)  %}
                <li>{{ restriction|trans }}</li>

            {% elseif result is not sameas(false) %}
                {% set count = result|length %}
                {% if count != 0 %}
                    {% set message = "{1} 1 %name% restriction|]1,Inf] %count% %name% restriction" %}
                    <li>
                        {{ message|trans({'%name%': restriction })|transchoice(count) }}
                    </li>
                {% endif %}
            {% endif %}
        {% endfor %}
    </ul>
{% endif %}