<h3>{% trans %}You are about to delete{% endtrans %} <strong>{{ medias|length }} {% trans %}media{% endtrans %}{% if medias|length > 1 %}s{% endif %}</strong></h3>
{% trans %}If you continue the following contents will be affected{% endtrans %}:<br>

{% for media in medias %}

    <h4>{{ media.name }}{% if media.associatedContents|length > 0 %} :{% endif %}</h4>

    {% if media.associatedContents|length > 0 %}
        <ul>
            {% for entityName,methodGroup in media.associatedContents %}
                {% for methodName,entities in methodGroup %}
                    <li>{{ entities|length }} {{ entityName }} {% trans %}with this file as{% endtrans %} {{ methodName }}</li>
                {% endfor %}
            {% endfor %}
        </ul>
    {% endif %}
{% endfor %}

<br>
{% trans %}Are you sure you want to continue{% endtrans %}?
