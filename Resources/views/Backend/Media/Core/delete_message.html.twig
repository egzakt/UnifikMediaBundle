{% if entity.isDeletable %}
    {% if associatedContents|length > 0 %}
        {% trans %}If you delete this entity the following contents will be affected{% endtrans %}:<br>
        <ul>
            {% for entityName,methodGroup in associatedContents %}
                {% for methodName,entities in methodGroup %}
                    <li>{{ entities|length }} {{ entityName }} {% trans %}with this file as{% endtrans %} {{ methodName }}</li>
                {% endfor %}
            {% endfor %}
        </ul>
    {% endif %}
    <br>
    {% trans %}Are you sure you want to delete{% endtrans %} "{% include 'FlexySystemBundle:Backend/Core:entity_title.html.twig' with { 'entity': entity } %}"?.
{% else %}
    "{% include 'FlexySystemBundle:Backend/Core:entity_title.html.twig' with { 'entity': entity } %}" {% trans %}cannot be deleted because of these restrictions:{% endtrans %}
    <ul>
        {% for restriction in entity.deleteRestrictions %}
            {% set result = attribute(entity, restriction) %}

            {% if result is sameas(true)  %}
                <li>{{ restriction|trans }}</li>

            {% elseif result is not sameas(false) %}
                {% set count = result|length %}
                {% if count != 0 %}
                    {% set message = "{1} 1 %name% restriction|]1,Inf] %count% %name% restriction" %}
                    <li>
                        {{ message|trans({'%name%': restriction })|transchoice(count) }}
                    </li>
                {% endif %}
            {% endif %}
        {% endfor %}
    </ul>
{% endif %}