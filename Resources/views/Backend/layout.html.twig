{% extends 'FlexySystemBundle:Backend:layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="http://blueimp.github.io/Gallery/css/blueimp-gallery.min.css">

    {# Use symlink path cause @ target have a known issue with the css rewrite filter #}
    {% stylesheets filter='cssrewrite'
        'bundles/flexymedia/backend/css/blueimp/jquery.fileupload-ui.css'
        'bundles/flexymedia/backend/css/media_select.css'
        'bundles/flexymedia/backend/css/simplePagination.css'
        'bundles/flexymedia/backend/css/ui.dynatree.css'
        'bundles/flexymedia/backend/css/jquery.contextMenu.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}

{% endblock %}

{% block content %}

    {% block content_header %}<h1>{% trans %}Medias{% endtrans %}</h1>{% endblock %}

    {% block flash_message %}

        {% if app.session.flashbag.has('success') %}
            <div class="flash-success">
                {% for flashMessage in app.session.flashbag.get('success') %}
                    <p>{{ flashMessage|trans }}</p>
                {% endfor %}
            </div>
        {% endif %}

        {% if app.session.flashbag.has('error') %}
            <div class="flash-error">
                {% for flashMessage in app.session.flashbag.get('error') %}
                    <p>{{ flashMessage|trans }}</p>
                {% endfor %}
            </div>
        {% endif %}

    {% endblock %}

    {% block content_main '' %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="http://feather.aviary.com/js/feather.js"></script>

    <!-- The Templates plugin is included to render the upload/download listings -->
    <script src="http://blueimp.github.io/JavaScript-Templates/js/tmpl.min.js"></script>
    <!-- The Load Image plugin is included for the preview images and image resizing functionality -->
    <script src="http://blueimp.github.io/JavaScript-Load-Image/js/load-image.min.js"></script>
    <!-- The Canvas to Blob plugin is included for image resizing functionality -->
    <script src="http://blueimp.github.io/JavaScript-Canvas-to-Blob/js/canvas-to-blob.min.js"></script>

    <script src="http://blueimp.github.io/Gallery/js/jquery.blueimp-gallery.min.js"></script>

    {% javascripts

        '@FlexyMediaBundle/Resources/public/backend/js/blueimp/jquery.iframe-transport.js'
        '@FlexyMediaBundle/Resources/public/backend/js/blueimp/jquery.fileupload.js'
        '@FlexyMediaBundle/Resources/public/backend/js/blueimp/jquery.fileupload-process.js'
        '@FlexyMediaBundle/Resources/public/backend/js/blueimp/jquery.fileupload-image.js'
        '@FlexyMediaBundle/Resources/public/backend/js/blueimp/jquery.fileupload-audio.js'
        '@FlexyMediaBundle/Resources/public/backend/js/blueimp/jquery.fileupload-video.js'
        '@FlexyMediaBundle/Resources/public/backend/js/blueimp/jquery.fileupload-validate.js'
        '@FlexyMediaBundle/Resources/public/backend/js/blueimp/jquery.fileupload-ui.js'
        '@FlexyMediaBundle/Resources/public/backend/js/blueimp/jquery.fileupload-jquery-ui.js'
        '@FlexyMediaBundle/Resources/public/backend/js/blueimp/main.js'

        '@FlexyMediaBundle/Resources/public/backend/js/jquery.simplePagination.js'
        '@FlexyMediaBundle/Resources/public/backend/js/jquery.cookie.js'
        '@FlexyMediaBundle/Resources/public/backend/js/jquery.dynatree.js'
        '@FlexyMediaBundle/Resources/public/backend/js/jquery.ui.position.js'
        '@FlexyMediaBundle/Resources/public/backend/js/jquery.contextMenu.js'
        '@FlexyMediaBundle/Resources/public/backend/js/media_select.js'

    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}